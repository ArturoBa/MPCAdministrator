@model MPCAdministrator.Models.Empleado
@{
    ViewBag.Title = "Nuevo Empleado";
}

<h2>Ingresar nuevo empleado</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Nombre, htmlAttributes: new { @class="control-label col-md-2"})
            <div class="col col-md-10">
                @Html.EditorFor(m => m.Nombre, new { htmlAttributes = new { @class="form-control" } })
                @Html.ValidationMessageFor(m => m.Nombre, "",htmlAttributes : new { @class="text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Apellido, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col col-md-10">
                @Html.EditorFor(m => m.Apellido, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Apellido, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Cedula, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col col-md-10">
                @Html.EditorFor(m => m.Cedula, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Cedula, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Nacionalidad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col col-md-10">
                @Html.EnumDropDownListFor(m => m.Nacionalidad, "", htmlAttributes : new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nacionalidad, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.FechaContratacion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col col-md-10">
                @Html.EditorFor(m => m.FechaContratacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.FechaContratacion, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Telefono, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col col-md-10">
                @Html.EditorFor(m => m.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Telefono, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <hr />
    <div class="form-group">
        <label class="control-label col-md-4">Al ingresar al empleado al sistema est&aacute; confirmando que est&aacute;
        contratado legalmente</label>
        <div class="col col-md-6">
            <input type="submit" value="Agregar nuevo empleado" class="btn btn-success" />
        </div>
    </div>
}
<hr />